<Page
    x:Class="ReChatterBotUWP.Send"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReChatterBotUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="10,10,0,0">
        <StackPanel Orientation="Horizontal">
            <FontIcon Glyph="&#xE724;" Margin="25,25,0,0" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock HorizontalAlignment="Left" Margin="15,18,0,0" Text="Send message" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>
        </StackPanel>
        <StackPanel Margin="25,30,0,0">
            <TextBox x:Name="RName" PlaceholderText="ReceiverID" Height="32" HorizontalAlignment="Left" Width="200"/>
            <TextBox x:Name="MessageText" PlaceholderText="Message Text" HorizontalAlignment="Stretch" Margin="0,15,50,0"/>
            <CheckBox x:Name="CheckBoxName" Content="Show your name" Margin="0,10,0,0" Checked="CheckBox_Checked"/>
            <Button x:Name="SendButton" Content="Send!" Margin="0,15,0,0" Click="Sendmessage" Padding="10,5,10,5"/>
        </StackPanel>
    </StackPanel>

</Page>
