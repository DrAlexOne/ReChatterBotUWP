<Page
    x:Class="ReChatterBotUWP.LogIn.LoginPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="35,35,35,35">
        <TextBlock Text="Authorization page" FontSize="36"/>

        <TextBlock Text="Check, its you?" FontSize="21"/>
        <TextBlock x:Name="NameByIdText" Text="---" FontSize="19"/>
        <Button Content="Don't you? Enter other ID" Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
            <TextBlock Text="Bot sent you are message with code." Margin="0,0,0,0" FontSize="20" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <HyperlinkButton Content="Resend Message." Margin="3,0,0,0" FontSize="20" VerticalAlignment="Top" Height="25" HorizontalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Padding="0,0,0,0"/>
        </StackPanel>
        <TextBox x:Name="CodeCheck" PlaceholderText="Enter code" Margin="0,5,0,0" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Check code" Margin="0,10,0,0" Width="115" Height="35" Click="CheckCodeButton"/>
    </StackPanel>
</Page>
